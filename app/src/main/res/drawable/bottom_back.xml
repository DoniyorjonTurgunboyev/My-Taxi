<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:innerRadius="28dp" android:shape="oval">
            <gradient android:angle="-45" android:endColor="?attr/colorSecondaryVariant" android:startColor="?attr/colorSecondary" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:innerRadius="28dp" android:shape="oval">
            <gradient android:angle="-45" android:endColor="?attr/colorSecondary" android:startColor="?attr/colorSecondaryVariant" />
        </shape>
    </item>
</selector>